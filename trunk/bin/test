#!/bin/bash

# Get all parameters except -translate2RV
parameters=$@
rvpara=""
for var in ${parameters}
do
    if [[ "$var" != "-translate2RV" ]]
    then
        #replace.mop with .rvm
        extension="${var##*.}"
        if [[ "$extension" == "mop" ]]
        then
            filename="${var%.*}"
            rvpara=${rvpara}" "${filename}.rvm
        else  
            rvpara=${rvpara}" "${var}
        fi
    fi
done
echo ${rvpara}
#rv-monitor ${rvpara}
